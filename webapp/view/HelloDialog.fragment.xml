<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="helloDialog"
      title="Hello {/recipient/name}">
      <core:Icon
            src="sap-icon://hello-world"
            size="8rem"
            class="sapUiMediumMargin"/>
      <beginButton>
            <Button
                icon="sap-icon://decline"
                text="{i18n>dialogButtonClose}"
                press=".onCloseDialog"
            />
      </beginButton>
   </Dialog>
</core:FragmentDefinition>